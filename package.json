{
	"name": "payload-template",
	"version": "0.3.0",
	"description": "A blank template to get started with Payload 3.0 in the DG way",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_OPTIONS=--no-deprecation next build",
		"dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
		"devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
		"generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
		"generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
		"lint": "cross-env NODE_OPTIONS=--no-deprecation biome lint .",
		"lint:write": "cross-env NODE_OPTIONS=--no-deprecation biome lint --write --unsafe .",
		"format": "cross-env NODE_OPTIONS=--no-deprecation biome format .",
		"format:write": "cross-env NODE_OPTIONS=--no-deprecation biome format --write .",
		"check": "cross-env NODE_OPTIONS=--no-deprecation biome check --write --unsafe .",
		"payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
		"start": "cross-env NODE_OPTIONS=--no-deprecation next start"
	},
	"dependencies": {
		"@payloadcms/db-postgres": "^3.28.1",
		"@payloadcms/live-preview-react": "^3.28.1",
		"@payloadcms/next": "^3.28.1",
		"@payloadcms/plugin-redirects": "^3.28.1",
		"@payloadcms/plugin-seo": "^3.28.1",
		"@payloadcms/richtext-lexical": "^3.28.1",
		"@payloadcms/storage-vercel-blob": "^3.28.1",
		"@payloadcms/ui": "^3.28.1",
		"@phosphor-icons/react": "^2.1.7",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"geist": "^1.3.1",
		"graphql": "^16.10.0",
		"next": "15.2.2",
		"payload": "^3.28.1",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"sharp": "0.33.5",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tailwindcss/postcss": "^4.0.14",
		"@types/node": "^22.13.10",
		"@types/react": "npm:types-react@19.0.0-rc.1",
		"@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.14",
		"typescript": "5.8.2"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0"
	}
}
