{
  "name": "payload-template",
  "version": "0.8.1",
  "description": "A blank template to get started with Payload 3.0 DG style",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=--no-deprecation next build",
    "dev": "NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "devsafe": "rm -rf .next && NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "generate:importmap": "NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "biome lint .",
    "lint:write": "biome lint --write --unsafe .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check --write --unsafe .",
    "payload": "NODE_OPTIONS=--no-deprecation payload",
    "start": "NODE_OPTIONS=--no-deprecation next start"
  },
  "dependencies": {
    "@payloadcms/db-vercel-postgres": "^3.46.0",
    "@payloadcms/live-preview-react": "^3.46.0",
    "@payloadcms/next": "^3.46.0",
    "@payloadcms/plugin-redirects": "^3.46.0",
    "@payloadcms/plugin-seo": "^3.46.0",
    "@payloadcms/richtext-lexical": "^3.46.0",
    "@payloadcms/storage-vercel-blob": "^3.46.0",
    "@payloadcms/translations": "^3.46.0",
    "@payloadcms/ui": "^3.46.0",
    "@phosphor-icons/react": "^2.1.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.11.0",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "payload": "^3.46.0",
    "radix-ui": "latest",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.12",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "5.8.3",
    "ultracite": "5.0.32"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
