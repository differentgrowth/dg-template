{
	"name": "payload-template",
	"version": "0.7.0",
	"description": "A blank template to get started with Payload 3.0 DG style",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "NODE_OPTIONS=--no-deprecation next build",
		"dev": "NODE_OPTIONS=--no-deprecation next dev --turbopack",
		"devsafe": "rm -rf .next && NODE_OPTIONS=--no-deprecation next dev --turbopack",
		"generate:importmap": "NODE_OPTIONS=--no-deprecation payload generate:importmap",
		"generate:types": "NODE_OPTIONS=--no-deprecation payload generate:types",
		"lint": "NODE_OPTIONS=--no-deprecation biome lint .",
		"lint:write": "NODE_OPTIONS=--no-deprecation biome lint --write --unsafe .",
		"format": "NODE_OPTIONS=--no-deprecation biome format .",
		"format:write": "NODE_OPTIONS=--no-deprecation biome format --write .",
		"check": "NODE_OPTIONS=--no-deprecation biome check --write --unsafe .",
		"payload": "NODE_OPTIONS=--no-deprecation payload",
		"start": "NODE_OPTIONS=--no-deprecation next start"
	},
	"dependencies": {
		"@payloadcms/db-vercel-postgres": "^3.38.0",
		"@payloadcms/live-preview-react": "^3.38.0",
		"@payloadcms/next": "^3.38.0",
		"@payloadcms/plugin-redirects": "^3.38.0",
		"@payloadcms/plugin-seo": "^3.38.0",
		"@payloadcms/richtext-lexical": "^3.38.0",
		"@payloadcms/storage-vercel-blob": "^3.38.0",
		"@payloadcms/ui": "^3.38.0",
		"@phosphor-icons/react": "^2.1.8",
		"@radix-ui/react-dialog": "^1.1.13",
		"@radix-ui/react-dropdown-menu": "^2.1.14",
		"@radix-ui/react-label": "^2.1.6",
		"@radix-ui/react-slot": "^1.2.2",
		"@radix-ui/react-switch": "^1.2.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"graphql": "^16.11.0",
		"next": "15.3.2",
		"next-themes": "^0.4.6",
		"payload": "^3.38.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"sharp": "0.34.1",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^22.15.18",
		"@types/react": "npm:types-react@19.0.0-rc.1",
		"@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
		"eslint": "^9.26.0",
		"eslint-config-next": "^15.3.2",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.1.7",
		"tw-animate-css": "^1.3.0",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0"
	}
}
